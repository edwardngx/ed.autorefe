{
    "manifest_version": 2,
    "name": "AutoRefresh",
    "description": "Tự động refresh trang cho tới khi bú",
    "version": "0.0.1",
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "contextMenus",
        "<all_urls>"
    ]
}